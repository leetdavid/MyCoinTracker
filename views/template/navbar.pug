mixin navitem(url, name)
  li.nav-item
    a.nav-link(href=url)= name
mixin header
  nav.navbar.navbar-expand-sm.fixed-top.navbar-dark.bg-purple
    //Brand
    a.navbar-brand(href='/') MyCoinTracker
    //Toggler
    button.navbar-toggler(type="button" data-toggle="collapse" data-target="#nav-content" aria-controls="nav-content" aria-expanded="false" aria-label="Toggle navigation")
      span.navbar-toggler-icon
    //Links
    #nav-content.collapse.navbar-collapse
      ul.navbar-nav.mr-auto.mt-2.mt-lg-0
        li.nav-item
          a.nav-link(data-toggle='modal' data-target='#loginModal' href='#') Login
        +navitem('/portfolio', 'Portfolio')
      form.form-inline.my-2.my-lg-0(method="GET" action='/search')
        input.form-control.mr-sm-2(type="search" placeholder="Search")
        button.btn.btn-purple.my-2.my-sm-0(type="submit" style='background-color:#651FFF!important') Search

  .modal.fade#loginModal(role='dialog')
    .modal-dialog
      //Modal Content
      .modal-content
        .modal-header
          h5.modal-title#loginModalLabel Login
          button.close(type='button' data-dismiss='modal' aria-label='Close')
            span(aria-hidden='true') &times;
        .modal-body
          include loginform
        .modal-footer
          button.btn.btn-secondary(type='button' data-dismiss='modal') Close
          